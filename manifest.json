{
  "name": "Responder",
  "version": "1.9",
 "manifest_version": 2,
   "description": "Outlines the web pages grid and displays the width/height in both 'em' and 'px' units when the browser is resized.",
   "icons": {
     "16": "icons/icon16.png",
     "48": "icons/icon48.png",
     "128": "icons/icon128.png"
   },
   "permissions": [
    "tabs",
    "activeTab",
   "http://*/",
   "https://*/"
     ],
   "browser_action": {
     "default_icon": "icons/icon16.png"
   },
   "content_scripts": [
     { "run_at" :"document_end",
       "matches": ["<all_urls>"],
       "js": ["src/js/script.js"],
       "css":["src/css/styles.css"]
     }
   ]
 }



