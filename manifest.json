{
  "name": "W/H - Width/Height",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Outputs the browsers width and height in both 'em' and 'px' units",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
   "tabs",
   "activeTab",
  "http://*/",
  "https://*/",
  "storage"

    ],
  "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false

    },
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    { "run_at" :"document_end",
      "matches": ["<all_urls>"],
      "js": ["src/js/script.js"],
      "css":["src/css/styles.css"]
    }
  ]
}
