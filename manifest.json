// Responder - Outlines the web pages grid and displays the width/height in both 'em' and 'px' units when the browser is resized.

{
  "version": "1.5",
  "manifest_version": 2,
   "name": "Responder",
   "description": "Outlines the web pages grid, displays the width/height in both 'em' and 'px' units when the browser is resized.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
    "browser_action": {
      "default_icon": "icons/icon16-active.png"
    },
  "permissions": [
   "tabs",
   "activeTab",
   "http://*/",
  "https://*/"
      ],
    "content_scripts": [
    {
      "matches": [
                "http://*/*",
                "https://*/*"
            ],
      "js": ["src/js/script.js"],
      "css":["src/css/styles.css"],
      "run_at" :"document_end"
    }
  ]
}
